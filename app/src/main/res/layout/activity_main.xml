<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text="5+5"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operator_Button"
            android:layout_weight="3"
            android:text="C"
            android:textSize="50dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/Operator_Button"
            android:text="/"
            android:textSize="50dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_um"
            style="@style/Numbers_Buttons"
            android:text="1" />

        <Button
            android:id="@+id/num_dois"
            style="@style/Numbers_Buttons"
            android:text="2" />

        <Button
            android:id="@+id/num_tres"
            style="@style/Numbers_Buttons"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multiplicacao"
            style="@style/Operator_Button"
            android:text="x"
            android:textSize="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_quatro"
            style="@style/Numbers_Buttons"
            android:text="4" />

        <Button
            android:id="@+id/num_cinco"
            style="@style/Numbers_Buttons"
            android:text="5" />

        <Button
            android:id="@+id/num_seis"
            style="@style/Numbers_Buttons"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_soma"
            style="@style/Operator_Button"
            android:text="+"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_sete"
            style="@style/Numbers_Buttons"
            android:text="7" />

        <Button
            android:id="@+id/num_oito"
            style="@style/Numbers_Buttons"
            android:text="8" />

        <Button
            android:id="@+id/num_nove"
            style="@style/Numbers_Buttons"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_subtracao"
            style="@style/Operator_Button"
            android:text="-"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Buttons"
            android:scaleX=".3"
            android:scaleY=".3"
            android:src="@drawable/backspace" />

        <Button
            android:id="@+id/num_zero"
            style="@style/Numbers_Buttons"
            android:text="0" />

        <Button
            android:id="@+id/ponto"
            style="@style/Numbers_Buttons"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_resultado"
            style="@style/Operator_Button"
            android:text="="
            android:textSize="70dp" />

    </LinearLayout>


</LinearLayout>